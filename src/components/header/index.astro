---
import Picture from "../../components/picture/index.astro";
export interface Props {
  name?: string;
  logo: {
    src: string;
    webp: string;
  } | null;
  pages?: Record<string, string>[];
  categories: Record<string, string>[];
  contacts?: {
    phone?: string;
    email?: string;
  } | null;
}

const { name: storeName, logo, categories, contacts } = Astro.props;
