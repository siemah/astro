---
import { getStoreDetails } from "../helpers/services/store/details";
import Layout from "../layouts/Layout.astro";

const storeDetails = await getStoreDetails();
const { store_social_media, store_ui } = storeDetails?.store_primary_settings;
const pageDescription = store_ui?.store_description || "";
---

<Layout title={"Contact"} description={pageDescription}>
  <main class="main-container js-main__container">
    <!-- carousel section -->
    <div
      class="jumbotron jumbotron-fluid p-0 m-0 p-20px carousel-image bg-skyblue overflow-hidden d-flex position-relative"
      style={`min-height: 350px;`}
    >
      <div class="container position-relative">
        <div
          class="h-100 d-flex flex-column justify-content-center align-items-center"
        >
          <h1 class="card__action w-auto mb-0 text-center">Contact</h1>
        </div>
      </div>
    </div>
    <!-- end of carousel section -->

    <div class="container">
      <!-- breadcrumb menu -->
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0 bg-white py-4 pl-0 border-bottom-grey">
          <li class="breadcrumb-item" aria-current="page">
            <a class="color-black" href="/">Accueil</a>
          </li>
          <li class="breadcrumb-item" aria-current="page">
            <a class="color-black" href="/contact/">Contact</a>
          </li>
        </ol>
      </nav>
      <!-- end of breadcrumb menu -->

      <div class="row mb-108px pt-5">
        <!-- contact content -->
        <div class="col-sm-12 col-md-6 mb-3 mb-md-0">
          <h2 class="h4">Email/Numéro de téléphone</h2>
          <div>
            <strong>Numéro de téléphone</strong>:{` `}
            <a href={`tel://${store_ui?.store_phone}`}
              >{store_ui?.store_phone}</a
            >
          </div>
          <div>
            <strong>Email</strong>:{` `}
            <a href={`mailto://${store_ui?.store_contact_email}`}
              >{store_ui?.store_contact_email}</a
            >
          </div>
          <div>
            <strong>Adresse:</strong>{` `}
            <span>{store_ui?.store_address}</span>
          </div>
        </div>
        <div class="col-sm-12 col-md-6">
          <h2 class="h4">Réseaux sociaux</h2>
          <div class="d-flex flex-column">
            {
              !!store_social_media?.store_twitter && (
                <a
                  target="_blank"
                  rel="noopener"
                  href={store_social_media?.store_twitter}
                >
                  Twitter
                </a>
              )
            }
            {
              !!store_social_media?.store_facebook && (
                <a
                  target="_blank"
                  rel="noopener"
                  href={store_social_media?.store_facebook}
                >
                  Facebook
                </a>
              )
            }
            {
              !!store_social_media?.store_instagram && (
                <a
                  target="_blank"
                  rel="noopener"
                  href={store_social_media?.store_instagram}
                >
                  Instagram
                </a>
              )
            }
            {
              !!store_social_media?.store_snapchat && (
                <a
                  target="_blank"
                  rel="noopener"
                  href={store_social_media?.store_snapchat}
                >
                  Snapchat
                </a>
              )
            }
            {
              !!store_social_media?.store_tiktok && (
                <a
                  target="_blank"
                  rel="noopener"
                  href={store_social_media?.store_tiktok}
                >
                  Tiktok
                </a>
              )
            }
            {
              !!store_social_media?.store_linkedin && (
                <a
                  target="_blank"
                  rel="noopener"
                  href={store_social_media?.store_linkedin}
                >
                  Linkedin
                </a>
              )
            }
            {
              !!store_social_media?.store_youtube && (
                <a
                  target="_blank"
                  rel="noopener"
                  href={store_social_media?.store_youtube}
                >
                  Youtube
                </a>
              )
            }
          </div>
        </div>
        <!-- end of contact content -->
      </div>
    </div>
  </main>
</Layout>
