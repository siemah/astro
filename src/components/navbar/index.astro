        </div>
      )
    }
    {
      !!store_social_media?.store_youtube && (
        <div class="mr-2">
          <a href={store_social_media?.store_youtube} class="icon">
            <Youtube />
          </a>
        </div>
      )
    }
    {
      !!store_social_media?.store_twitter && (
        <div class="mr-2">
          <a href={store_social_media?.store_twitter} class="icon">
            <Twitter />
          </a>
        </div>
      )
    }
    {
      !!store_social_media?.store_snapchat && (
        <div class="mr-2">
          <a href={store_social_media?.store_snapchat} class="icon">
            <Snapchat />
          </a>
