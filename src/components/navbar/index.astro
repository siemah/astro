            </li>
            <li class="text-left pb-1 fw-300 pt-1 accordion__list-item">
              <a href="/">04-Link</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="social-media d-flex pt-2 justify-content-center">
    {
      !!store_social_media?.store_facebook && (
        <div class="mr-2">
          <a href={store_social_media?.store_facebook} class="icon">
            <Facebook />
          </a>
        </div>
      )
    }
    {
      !!store_social_media?.store_instagram && (
        <div class="mr-2">
          <a href={store_social_media?.store_instagram} class="icon">
            <Instagram />
          </a>
        </div>
      )
    }
    {
      !!store_social_media?.store_tiktok && (
        <div class="mr-2">
          <a href={store_social_media?.store_tiktok} class="icon">
            <Tiktok />
